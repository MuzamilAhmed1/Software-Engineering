doctype html
html(lang="en")
  head
    title= `${user.name}'s Profile - Flavour Cartel`
    link(rel="stylesheet" href="/styles.css")
  body
    header
      .navbar
        h1 Flavour Cartel
        nav
          ul
            li: a(href="/recipes") Browse Recipes
            li: a(href="/submit-recipe") Submit Recipe
            li: a(href="/users") Users
            li: a(href="/") Home

    // Profile Section
    .profile-container
      .profile-header
        img(src=`/images/${user.profile_picture || 'default.png'}` alt="Profile Picture")
        h2= user.name
        p= user.email

    // User's Recipes
    .user-recipes
      h3 Recipes by #{user.name}
      if recipes.length
        .recipe-grid
          each recipe in recipes
            .recipe-card
              img(src=`/images/${recipe.image}` alt=recipe.title)
              h4= recipe.title
              p= recipe.description
              a.btn(href=`/recipe/${recipe.id}`) View Recipe
      else
        p No recipes posted yet.

    footer
      p &copy; 2025 Flavour Cartel | Made with ❤️
