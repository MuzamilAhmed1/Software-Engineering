doctype html
html
  head
    title Users List
    link(rel="stylesheet", href="/styles.css")
  body
    div.users-container
      h1 Users List Page
      table.users-table
        thead
          tr
            th ID
            th Name
            th Email
            th Profile Picture
            th Joined On
        tbody
          each user in users
            tr
              td= user.id
              td= user.name
              td= user.email
              td
                img(src=`/images/${user.profile_picture}`, alt="Profile Picture")
              td= user.created_at